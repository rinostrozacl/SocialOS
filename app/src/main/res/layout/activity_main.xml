<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".MainActivity">

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        tools:ignore="MissingConstraints" />


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="174dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:orientation="vertical">

            <Button
                android:id="@+id/app_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:fontFamily="sans-serif-black"
                android:onClick="openApps"
                android:text="Aplicaciones"
                android:textAlignment="textStart"
                android:textColor="#FAF9F9"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_calculator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:fontFamily="sans-serif-black"
                android:onClick="onClick"
                android:text="Calculadora"
                android:textAlignment="textStart"
                android:textColor="#FFFEFE"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:fontFamily="sans-serif-black"
                android:onClick="onClick"
                android:text="calendario"
                android:textAlignment="textStart"
                android:textColor="#FFFEFE"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_cam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:fontFamily="sans-serif-black"
                android:onClick="onClick"
                android:text="Camara fotografica"
                android:textAlignment="textStart"
                android:textColor="#F7F4F4"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_wifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:fontFamily="sans-serif-black"
                android:onClick="onClick"
                android:text="CONECTAR WIFI"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_config"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:fontFamily="sans-serif-black"
                android:onClick="onClick"
                android:text="Configuraciones"
                android:textAlignment="textStart"
                android:textColor="#FFFEFE"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_sms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:fontFamily="sans-serif-black"
                android:onClick="onClick"
                android:text="Mensaje de Texto"
                android:textAlignment="textStart"
                android:textColor="#FFFEFE"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:fontFamily="sans-serif-black"
                android:onClick="onClick"
                android:text="realizar llamada"
                android:textAlignment="textStart"
                android:textColor="#FAF9F9"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:fontFamily="sans-serif-black"
                android:onClick="onClick"
                android:text="INTERNET GOOGLE"
                android:textAlignment="textStart"
                android:textColor="#FDF7F2F2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:fontFamily="sans-serif-black"
                android:onClick="onClick"
                android:text="Facebook"
                android:textAlignment="textStart"
                android:textColor="#FDF7F2F2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_whatsapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:fontFamily="sans-serif-black"
                android:onClick="onClick"
                android:text="Whatsapp"
                android:textAlignment="textStart"
                android:textColor="#FDF7F2F2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_youtube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:fontFamily="sans-serif-black"
                android:onClick="onClick"
                android:text="Youtube VIDEOS"
                android:textAlignment="textStart"
                android:textColor="#FDF7F2F2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:fontFamily="sans-serif-black"
                android:onClick="onClick"
                android:text="GALERIA IMAGENES"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_watch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:fontFamily="sans-serif-black"
                android:onClick="onClick"
                android:text="RELOJ Y ALARMA"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:fontFamily="sans-serif-black"
                android:onClick="onClick"
                android:text="Chat comunal"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />


            />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>