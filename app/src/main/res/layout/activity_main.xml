<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ExpandableListView
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="100px"
        tools:ignore="MissingConstraints" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="174dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_call"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:fontFamily="@font/expletus_sans_bold"
                android:onClick="onClick"
                android:text="Llamar"
                android:textColor="#FAF9F9"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:fontFamily="@font/expletus_sans_bold"
                android:onClick="onClick"
                android:text="Contactos"
                android:textColor="#FDFDFD"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_cam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:fontFamily="@font/expletus_sans_bold"
                android:text="Camara"
                android:textColor="#F7F4F4"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:textColor="#FFFEFE"
                android:fontFamily="@font/expletus_sans_bold"
                android:text="Calendario"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/expletus_sans_bold"
                android:text="Correo"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_calculator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:textColor="#FFFEFE"
                android:fontFamily="@font/expletus_sans_bold"
                android:text="Calculadora"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_config"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/expletus_sans_bold"
                android:text="Configuracion"
                android:textColor="#FFFEFE"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_sms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="#FFFEFE"
                android:clickable="true"
                android:fontFamily="@font/expletus_sans_bold"
                android:text="Mensaje de Texto"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/expletus_sans_bold"
                android:onClick="onClick"
                android:text="Facebook"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_whatsapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/expletus_sans_bold"
                android:onClick="onClick"
                android:text="Whatsapp"
                android:textColor="#FDF7F2F2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:fontFamily="@font/expletus_sans_bold"
                android:text="Imagenes"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/expletus_sans_bold"
                android:onClick="onClick"
                android:text="GOOGLE"
                android:textColor="#FDF7F2F2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_archives"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/expletus_sans_bold"
                android:text="Mis Archivos"
                android:textSize="30sp" />
          
            <Button
                android:id="@+id/bt_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/expletus_sans_bold"
                android:text="Menu"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_watch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/expletus_sans_bold"
                android:onClick="onClick"
                android:text="Reloj"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_wifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/expletus_sans_bold"
                android:text="WIFI"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_files"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/expletus_sans_bold"
                android:text="Archivos"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_playstore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/expletus_sans_bold"
                android:text="Google PlayStore"
                android:textSize="30sp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>